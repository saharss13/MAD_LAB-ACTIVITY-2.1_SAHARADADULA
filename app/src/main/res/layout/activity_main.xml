<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvsec"
        android:textSize="30sp"
        android:layout_width="match_parent"
        android:layout_height="92dp"
        android:gravity="center"
        android:textAlignment="viewEnd"
        android:layout_margin="10sp"
        tools:ignore="RtlCompat">

    </TextView>

    <TextView

        android:id="@+id/tvmain"
        android:textSize="40sp"
        android:layout_width="match_parent"
        android:layout_height="92dp"
        android:gravity="center"
        android:textAlignment="viewEnd"
        android:layout_margin="10sp"
        android:maxLines="1"
        tools:ignore="RtlCompat">

    </TextView>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10sp"
        android:rowCount="6"
        android:columnCount="4">


        <Button
            android:id="@+id/bac"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="AC"
            android:textSize="18sp"
            android:layout_margin="5dp"
            />
        <Button
            android:id="@+id/bc"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="C"
            android:textSize="18sp"
            android:layout_margin="5dp"
            />
        <Button
            android:id="@+id/blog"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="LOG"
            android:textSize="18sp"
            android:layout_margin="5dp"
            />
        <Button
            android:id="@+id/MOD"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="MOD"
            android:textSize="18sp"
            android:layout_margin="5dp"
            />
        <Button
            android:id="@+id/bsquare"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="x²"
            android:textSize="18sp"
            android:layout_margin="5dp"
            />
        <Button
            android:id="@+id/bsqrt"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="√"
            android:textSize="18sp"
            android:layout_margin="5dp"
            />
        <Button
            android:id="@+id/binv"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="1/x"
            android:textSize="18sp"
            android:layout_margin="5dp"
            />

        <Button
            android:id="@+id/bdiv"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="÷"
            android:textSize="18sp"
            android:layout_margin="5dp"
            />

        <Button
            android:id="@+id/b7"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="7"
            android:textSize="18sp"
            android:layout_margin="5dp"
            />

        <Button
            android:id="@+id/b8"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="8"
            android:textSize="18sp"
            android:layout_margin="5dp"
            />

        <Button
            android:id="@+id/b9"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="9"
            android:textSize="18sp"
            android:layout_margin="5dp"
            />

        <Button
            android:id="@+id/bmul"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="×"
            android:textSize="18sp"
            android:layout_margin="5dp"
            />

        <Button
            android:id="@+id/b4"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="4"
            android:textSize="18sp"
            android:layout_margin="5dp"
            />

        <Button
            android:id="@+id/b5"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="5"
            android:textSize="18sp"
            android:layout_margin="5dp"
            />

        <Button
            android:id="@+id/b6"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="6"
            android:textSize="18sp"
            android:layout_margin="5dp"
            />

        <Button
            android:id="@+id/bmin"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="-"
            android:textSize="18sp"
            android:layout_margin="5dp"
            />

        <Button
            android:id="@+id/b1"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="1"
            android:textSize="18sp"
            android:layout_margin="5dp"
            />

        <Button
            android:id="@+id/b2"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="2"
            android:textSize="18sp"
            android:layout_margin="5dp"
            />

        <Button
            android:id="@+id/b3"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="3"
            android:textSize="18sp"
            android:layout_margin="5dp"
            />

        <Button
            android:id="@+id/bplus"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="+"
            android:textSize="18sp"
            android:layout_margin="5dp"
            />

        <Button
            android:id="@+id/expo"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="^"
            android:textSize="18sp"
            android:layout_margin="5dp"
            />

        <Button
            android:id="@+id/b0"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="0"
            android:textSize="18sp"
            android:layout_margin="5dp"
            />

        <Button
            android:id="@+id/bdot"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="."
            android:textSize="18sp"
            android:layout_margin="5dp"
            />

        <Button
            android:id="@+id/bequal"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="="
            android:textSize="18sp"
            android:layout_margin="5dp"
            />
    </GridLayout>
</LinearLayout>